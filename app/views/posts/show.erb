<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<p>
	<img src="<%= @post.image.url %>">
</p>
<hr>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-default' %>
<%= link_to "Delete", post_path(@post),
method: :delete,
data: {confirm: "정말로 삭제하시겠어요?"},
:class => 'btn btn-danger' %>

<hr>


